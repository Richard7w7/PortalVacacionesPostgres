@model ControlPostgres.Contexto.Entities.TbContraseña


<h1>Recuperacion de Contraseña</h1>

<div class="row">
    <div class="col-md-4">
        <label style="font-size:25px">POR INGRESE LOS SIGUIENTES CAMPOS PARA RECUPERACION DE CONTRASEÑA</label>
        <form asp-action="RecuperarContra" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="codigoempleado" class="control-label">Ingrese su codigo de empleado</label>
                <input asp-for="codigoempleado" class="form-control" autocomplete="off" />
                <span asp-validation-for="codigoempleado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="telefono" class="control-label">Ingrese su numero de telefono</label>
                <input asp-for="telefono" class="form-control" autocomplete="off" />
                <span asp-validation-for="telefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="fechanacimiento" class="control-label">Ingrese su fecha de nacimiento</label>
                <input asp-for="fechanacimiento" class="form-control" autocomplete="off" />
                <span asp-validation-for="fechanacimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button value="RecuperarContra" type="submit" class="btn btn-primary"> Recuperar</button>
            </div>
            

        </form>
    </div>
</div>