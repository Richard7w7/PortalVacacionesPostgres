<div class="botones">
    <div class="row">
        <div class="col-1">
            <div class="mb-3">
                <div class="botones__boton1">
                    <a asp-action="PerfilColaborador" type="submit" class="btn btn-primary">Regresar</a>
                </div>
            </div>
        </div>
        <div class="col-1">
            <div class="mb-3">
                <div class="botones__boton2">
                    <a id="Imprimir" asp-action="ImprimirDocumento" asp-route-id="@Model.SolicitudId" type="submit" class="btn btn-primary">Imprimir</a>
                </div>
            </div>
        </div>
    </div>


</div>
