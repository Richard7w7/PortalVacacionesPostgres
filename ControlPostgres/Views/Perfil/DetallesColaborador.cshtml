        </div>
        <div class="col">
            <div class="mb-3">
                <label class="control-label">
                    @Html.DisplayNameFor(model => model.Estados.EstadosNombre)
                </label>
                <label class="form-control">
                    @Html.DisplayFor(model => model.Estados.EstadosNombre)
