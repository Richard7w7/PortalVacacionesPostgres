@model ControlPostgres.Contexto.Entities.TbSolicitude
@{ ViewData["Title"] = "Detalles de la Solicitud"; }
@section Scripts {
    <script>
        $(function () {

            document.getElementById('Imprimir').style.visibility = 'hidden';
            document.getElementById('Imprimir').style.display = "none";
            if (@ViewBag.Estado == 4 || @ViewBag.Estado == 5) {
                document.getElementById('Imprimir').style.visibility = 'visible';
                document.getElementById('Imprimir').style.display = "initial";
            }
        });

    </script>
}
@{ ViewData["Title"] = "Detalles"; }
